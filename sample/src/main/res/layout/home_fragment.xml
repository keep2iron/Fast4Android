<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <io.github.keep2iron.fast4android.topbar.FastTopBarLayout
      android:id="@+id/titleBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      app:fast_drawable_color_end="@color/fast_config_color_50_blue"
      app:fast_drawable_color_start="@color/fast_config_color_blue"
      app:fast_topbar_title="Fast4Android Components"
      app:fast_topbar_title_color="@color/fast_config_color_white"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />
</LinearLayout>