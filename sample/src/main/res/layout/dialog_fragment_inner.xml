<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <io.github.keep2iron.fast4android.core.alpha.FastRoundImageButton
    android:id="@+id/fastRoundImageButton"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@color/colorPrimary"
    app:layout_constraintEnd_toEndOf="@+id/input"
    app:layout_constraintTop_toTopOf="parent" />

  <io.github.keep2iron.fast4android.core.alpha.FastAlphaRoundEditText
    android:id="@+id/input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:gravity="center_vertical"
    android:hint="hint"
    android:paddingLeft="6dp"
    app:fast_drawable_color_end="#f5f5f5"
    app:fast_drawable_color_start="#f5f5f5"
    app:fast_drawableRightTint="#666666"
    app:fast_drawable_radius="8dp"
    app:layout_constraintTop_toBottomOf="@+id/fastRoundImageButton" />

</LinearLayout>