<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CompTextViewPlus">
        <attr name="compDrawableLeftWidth" format="dimension" />
        <attr name="compDrawableLeftHeight" format="dimension" />

        <attr name="compDrawableTopWidth" format="dimension" />
        <attr name="compDrawableTopHeight" format="dimension" />

        <attr name="compDrawableRightWidth" format="dimension" />
        <attr name="compDrawableRightHeight" format="dimension" />

        <attr name="compDrawableBottomWidth" format="dimension" />
        <attr name="compDrawableBottomHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CompPageStateLayout">

        <!--NoData Layout resource id-->
        <attr name="comp_psl_layout_noData" format="reference" />

        <!--NoNetwork Layout resource id-->
        <attr name="comp_psl_layout_noNetwork" format="reference" />

        <!--LoadError Layout resource id-->
        <attr name="comp_psl_layout_loadError" format="reference" />

        <!--Loading Layout resource id-->
        <attr name="comp_psl_layout_loading" format="reference" />
    </declare-styleable>

    <!--<attr name="SwipeBackLayoutStyle" format="reference" />-->

    <declare-styleable name="CompBottomTabLayout">
        <!--
            set tab item drawable width
        -->
        <attr name="comp_tabItem_drawableWidth" format="dimension" />
        <!--
            set tab item drawable height
        -->
        <attr name="comp_tabItem_drawableHeight" format="dimension" />
        <!--
            set tab item textSize
        -->
        <attr name="comp_tabItem_textSize" format="dimension" />
        <!--
            set tab item drawablePadding
        -->
        <attr name="comp_tabItem_drawablePadding" format="dimension" />
        <!--
            set tab item marginLeft and marginRight
        -->
        <attr name="comp_tabItem_margin" format="dimension" />
        <!--
            set tab item background
        -->
        <attr name="comp_tabItem_background" format="reference" />
        <!--
            set height with @io.github.keep2iron.android.widget.CompBottomTabLayout for better calculation text in layout position
        -->
        <attr name="comp_tabLayout_height" format="reference" />
    </declare-styleable>

    <declare-styleable name="CompLoopViewLayout">
        <attr name="comp_loopLayout_indicatorDrawable_selected" format="reference" />
        <attr name="comp_loopLayout_indicatorDrawable_unselected" format="reference" />
        <attr name="comp_loopLayout_indicatorDrawable_width" format="dimension" />
        <attr name="comp_loopLayout_indicatorDrawable_height" format="dimension" />
        <attr name="comp_loopLayout_indicatorDrawable_margin" format="dimension" />
    </declare-styleable>
</resources>