<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="FastAlphaTextView">
    <attr format="dimension" name="fastDrawableLeftWidth"/>
    <attr format="dimension" name="fastDrawableLeftHeight"/>

    <attr format="dimension" name="fastDrawableTopWidth"/>
    <attr format="dimension" name="fastDrawableTopHeight"/>

    <attr format="dimension" name="fastDrawableRightWidth"/>
    <attr format="dimension" name="fastDrawableRightHeight"/>

    <attr format="dimension" name="fastDrawableBottomWidth"/>
    <attr format="dimension" name="fastDrawableBottomHeight"/>

    <attr format="color" name="fastDrawableTint"/>
    <attr format="color" name="fastDrawableLeftTint"/>
    <attr format="color" name="fastDrawableTopTint"/>
    <attr format="color" name="fastDrawableRightTint"/>
    <attr format="color" name="fastDrawableBottomTint"/>
  </declare-styleable>
  <attr format="reference" name="FastAlphaTextViewStyle"/>

  <declare-styleable name="CompPageStateLayout">

    <!--NoData Layout resource id-->
    <attr format="reference" name="comp_psl_layout_noData"/>

    <!--NoNetwork Layout resource id-->
    <attr format="reference" name="comp_psl_layout_noNetwork"/>

    <!--LoadError Layout resource id-->
    <attr format="reference" name="comp_psl_layout_loadError"/>

    <!--Loading Layout resource id-->
    <attr format="reference" name="comp_psl_layout_loading"/>
  </declare-styleable>

  <!--<attr name="SwipeBackLayoutStyle" format="reference" />-->

  <declare-styleable name="CompBottomTabLayout">
    <!--
        set tab item drawable width
    -->
    <attr format="dimension" name="comp_tabItem_drawableWidth"/>
    <!--
        set tab item drawable height
    -->
    <attr format="dimension" name="comp_tabItem_drawableHeight"/>
    <!--
        set tab item textSize
    -->
    <attr format="dimension" name="comp_tabItem_textSize"/>
    <!--
        set tab item drawablePadding
    -->
    <attr format="dimension" name="comp_tabItem_drawablePadding"/>
    <!--
        set tab item marginLeft and marginRight
    -->
    <attr format="dimension" name="comp_tabItem_margin"/>
    <!--
        set tab item background
    -->
    <attr format="reference" name="comp_tabItem_background"/>
    <!--
        set height with @io.github.keep2iron.android.widget.CompBottomTabLayout for better calculation text in layout position
    -->
    <attr format="reference" name="comp_tabLayout_height"/>
  </declare-styleable>

  <declare-styleable name="CompLoopViewLayout">
    <attr format="reference" name="comp_loopLayout_indicatorDrawable_selected"/>
    <attr format="reference" name="comp_loopLayout_indicatorDrawable_unselected"/>
    <attr format="dimension" name="comp_loopLayout_indicatorDrawable_width"/>
    <attr format="dimension" name="comp_loopLayout_indicatorDrawable_height"/>
    <attr format="dimension" name="comp_loopLayout_indicatorDrawable_margin"/>
  </declare-styleable>
</resources>